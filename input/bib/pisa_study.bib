@mastersthesis{pasha_crossnational_2024,
  title = {Cross-{{National Variations}} in {{Self-Efficacy}} and {{Attitudes Towards ICT Use}} in {{Teaching}}: {{An Integrative Data Analysis Across ICILS Countries}}},
  shorttitle = {Cross-{{National Variations}} in {{Self-Efficacy}} and {{Attitudes Towards ICT Use}} in {{Teaching}}},
  author = {Pasha, Monirul Hoque},
  year = {2024},
  urldate = {2024-12-18},
  abstract = {Information and communication technology (ICT) use in teaching is a significant concern in educational systems worldwide. Teachers' psychological factors, such as their self-efficacy and attitudes toward ICT use, have been considered influential in implementing ICT in teaching. However, previous studies have focused on small sample sizes or a limited number of countries and have largely ignored the mediation effect of attitudes on the relationship between self-efficacy and ICT use. This study addresses these limitations by using data from the International Computer and Information Literacy Study (ICILS) to examine the relationship between these factors. Specifically, the study synthesizes evidence on the mediation effect of attitudes on the relation of self-efficacy and ICT use in teaching, controlling for ICT resources at school and teachers' backgrounds. In addition, the study examines the variation in this relationship across varied educational settings. The findings suggest that attitude significantly and partially mediates the relationship between self-efficacy and ICT use in teaching, with variations across different countries. The country's ICT infrastructure partly explains this cross-country variability in the mediation relationship. This large-scale data research reveals the mediation effect of attitudes mediate their self-efficacy and ICT use in teaching. This relationship varies across ICILS countries and is influenced to some extent by the country's ICT infrastructure, which informs global educational policies to improve ICT implementation.},
  langid = {english},
  annotation = {Accepted: 2024-08-21T23:40:02Z}
}

@article{rohatgi_role_2016,
  title = {The Role of {{ICT}} Self-Efficacy for Students' {{ICT}} Use and Their Achievement in a Computer and Information Literacy Test},
  author = {Rohatgi, Anubha and Scherer, Ronny and Hatlevik, Ove E.},
  year = {2016},
  month = nov,
  journal = {Computers \& Education},
  volume = {102},
  pages = {103--116},
  issn = {0360-1315},
  doi = {10.1016/j.compedu.2016.08.001},
  urldate = {2024-12-26},
  abstract = {Students' self-efficacy in using information and communication technology (ICT) is among the most important motivational constructs that are related to their ICT acceptance, use, and literacy. The present study attempts to generate new knowledge about the role of ICT self-efficacy for students' ICT use and their computer and information literacy (CIL). Using the Norwegian data obtained from the International Computer and Information Literacy Study (ICILS) in 2013 (N~=~2410 students in grade level 9), we distinguish between self-efficacy in basic and advanced ICT skills and examine the relations to students' ICT use for different purposes (school-related task learning, study purposes, and recreation) and their achievement in a CIL test. The results show that: (1) self-efficacy in basic ICT skills is positively related to CIL achievement, whereas self-efficacy in advanced ICT skills shows a negative relation; (2) ICT use and ICT self-efficacy are positively correlated for some of the ICT use purposes; (3) there is an indirect effects of ICT use on CIL achievement via ICT self-efficacy; (4) this indirect effect holds for both female and male students. Our findings point to a potential mechanism that links ICT use, self-efficacy, and CIL. Implications for future research and educational practice are discussed.},
  keywords = {Computer and information literacy,ICILS 2013,ICT self-efficacy,ICT use,Indirect effects model}
}

@article{scheerder_determinants_2017,
