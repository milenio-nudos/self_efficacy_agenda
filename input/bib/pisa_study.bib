@article{li_ict_2023,
  title = {{{ICT Self-efficacy}} Scale: The Correlations with the Age of First Access to the Internet, the Age at First Ownership of a Personal Computer ({{PC}}), and a Smartphone},
  shorttitle = {{{ICT Self-efficacy}} Scale},
  author = {Li, Ziyi and Zuo, Tianming and Wei, Xiaotong and Ding, Ning},
  year = {2023},
